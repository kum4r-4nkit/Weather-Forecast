<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="@string/pref_lacation_label"
        android:key="@string/pref_lacation_key"
        android:defaultValue="@string/pref_lacation_default"
